@import "foundation_and_overrides";
@import "global";
@import "vendor/navbar";
@import "vendor/add_item_modal";
@import "vendor/kanban";

body {
  font-family: "Lato", Helvetica, Arial, sans-serif;
}

.container {
  @media #{$small-up} {
    padding-top: 5px;
  }

  @media #{$medium-up} {
    padding: 5px;
  }

  @media #{$large-up} {
    padding: 10px;
  }
}

table {
  .button, input[type], select {
    margin-bottom: rem_calc(0px);
  }
}

.hidden {
  display: none;
}

ul#items_list {
  list-style: none;
}
