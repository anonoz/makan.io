// index
.categories-index {
  @media #{$medium-up} {
    position: fixed;
  }
}

.menu-card {
  padding: 3px;
  border: 1px solid $smoke;

  .menu-image {
    display: block;
    text-align: center;
    height: 200px;

    @media #{$small-only} {
      height: 100px;
    }
  }

  .menu-base-price {
    display: block;
  }
