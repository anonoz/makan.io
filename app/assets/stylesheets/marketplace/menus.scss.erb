// index
.categories-index {
  @media #{$medium-up} {
    position: fixed;
  }
}

ul.menu-block-grid {
  list-style: none;
  margin: 0px;

  @media #{ $medium-up } {
    @include block-grid(2);
  }

  @media #{ $large-up } {
    @include block-grid(3);
  }
}

.menu-card {
  padding: 3px;
  border: 1px solid $smoke;

  @media #{ $small-only } {
    .row {
      margin: 0px;
    }
  }

  .menu-image {
    display: block;
    text-align: center;
    height: 200px;

    @media #{$small-only} {
      height: auto;
    }
  }

  .menu-base-price {
    display: block;
  }

  .button {
    margin: 0px;
  }
}

// show (aka order_item new)
.hidden-food-option-form-field {
  display: none;
}
