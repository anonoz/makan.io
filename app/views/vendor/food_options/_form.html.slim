= simple_form_for @food_option, url: {action: :update} do |f|

  label
    | Title
    = f.input :title, label: false, required: true

  label
    | Kind
    = f.input :kind, collection: Food::Option.kind.values, disabled: true, label: false

  - if @food_option.kind == :choose_multiple
    .row
      .small-6.columns
        label
          | Min
          = f.text_field :min

      .small-6.columns
        label
          | Max
          = f.text_field :max
    .row
      small.small-12.columns Min/Max Choose Multiple Only, leave 0 by default for no limit.

  = f.submit "Update", class: "button expand success"