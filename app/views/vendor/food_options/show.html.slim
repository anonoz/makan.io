.row
  .small-12.medium-6.columns
    h3 Food Option

    fieldset
      == render "form"

  .small-12.medium-6.columns
    h3 Choices

    .row
      table.small-12
        thead
          th.small-9 Item
          th.small-3 Amount
        tbody
          - @choices.each do |choice|
            tr
              td = choice.title
              td = choice.amount

    = link_to vendor_food_option_choices_path(@food_option)
      .button.expand.success Edit Choices