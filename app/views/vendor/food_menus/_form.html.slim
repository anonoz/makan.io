= simple_form_for [:vendor, @menu] do |f|
  
  / fieldset
    / legend New Food Menu

  .row
    .small-12.large-7.columns
      fieldset
        legend Basic Info

        / Food Title
        .row
          .small-3.columns
            label.right.inline[for="food_menu_title"] Title
          .small-9.columns
            = f.input :title, placeholder: "Nasi Goreng", required: true, label: false

        / $_$
        .row
          .small-3.columns
            label.right.inline[for="food_menu_base_price"] Base Price
          .small-9.columns
            .row.collapse.prefix-radius
              .small-3.columns
                span.prefix = currency_symbol
              .small-9.columns
                = f.input :base_price, required: true, label: false

        / $_$
        .row
          .small-3.columns
            label.right.inline[for="food_menu_subvendors_price"] Subvendor's Price
          .small-9.columns
            .row.collapse.prefix-radius
              .small-3.columns
                span.prefix = currency_symbol
              .small-9.columns
                = f.input :subvendor_price, required: true, label: false

        / Category
        .row
          .small-3.columns
            label.right.inline[for="food_menu_food_category_id"] Category
          .small-9.columns
            = f.input :food_category_id, collection: @vendor.food_categories, required: true, label: false

        / Subvendor
        .row
          .small-3.columns
            label.right.inline[for="food_menu_vendor_subvendor_id"] Subvendor
          .small-9.columns
            = f.input :vendor_subvendor_id, collection: @vendor.subvendors, required: true, label: false

        .row
          .small-3.columns
          .small-9.columns
            = f.input :halal

        .row
          .small-3.columns
          .small-9.columns
            = f.input :kena_gst

        .row
          .small-3.columns
          .small-9.columns
            = f.input :kena_delivery_fee

        .row
          .small-3.columns
            label.right.inline[for="food_menu_feature_photo"] Shashin
          .small-9.columns
            = f.input :feature_photo, as: :file, label: false

    .small-12.large-5.columns

      .row
        fieldset
          legend Options
          
          = f.association :food_options, as: :check_boxes, label: false

      .row
        fieldset
          legend Allergens

          = f.association :food_allergens, as: :check_boxes, label: false

  .row
    .small-12.large-8.large-centered.columns
      = f.submit "Save", class: "button success expand"
